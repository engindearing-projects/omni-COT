<?xml version="1.0" encoding="utf-8"?>
<filters>

    <!-- Filter for COT items to show affiliation menu -->
    <!-- Matches all COT 2525B/C format: a-{affiliation}-{dimension}-... -->
    <filter type="a-.*" menu="menus/cot_affiliation_menu.xml" />

    <!-- Specific overrides for different COT categories -->

    <!-- Friendly COT items (a-f-*) -->
    <filter type="a-f-.*" menu="menus/cot_affiliation_menu.xml" />

    <!-- Hostile COT items (a-h-*) -->
    <filter type="a-h-.*" menu="menus/cot_affiliation_menu.xml" />

    <!-- Unknown COT items (a-u-*) -->
    <filter type="a-u-.*" menu="menus/cot_affiliation_menu.xml" />

    <!-- Pending/Suspected COT items (a-p-* or a-s-*) -->
    <filter type="a-p-.*" menu="menus/cot_affiliation_menu.xml" />
    <filter type="a-s-.*" menu="menus/cot_affiliation_menu.xml" />

    <!-- Neutral COT items (a-n-*) -->
    <filter type="a-n-.*" menu="menus/cot_affiliation_menu.xml" />

</filters>
